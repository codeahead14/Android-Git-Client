<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey100"
    tools:context="com.example.gaurav.gitfetchapp.IssuesFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/issues_sliding_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="@color/grey100"
        app:tabSelectedTextColor="@android:color/white"
        app:tabBackground="@color/deepPurple300"
        app:tabIndicatorColor="@color/teal100"
        app:tabMode="fixed"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/issues_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" />

</LinearLayout>