<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/issue_labels_events"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/issue_event_tag"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="@dimen/item_horizontal_margin_small"
        android:src="@drawable/ic_tag_outline"
        android:layout_gravity="center"
        android:background="@drawable/circle_drawable"
        android:contentDescription="@string/placeholder_desc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/item_horizontal_margin_normal"
        android:paddingLeft="@dimen/item_horizontal_margin_normal"
        android:paddingEnd="@dimen/item_horizontal_margin_normal"
        android:paddingRight="@dimen/item_horizontal_margin_normal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="true"
            android:paddingTop="@dimen/item_horizontal_margin_small">
            <TextView
                android:id="@+id/issue_event_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/bluegrey800"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_account_circle_black_36dp"
                android:drawableStart="@drawable/ic_account_circle_black_36dp"
                android:drawablePadding="@dimen/item_horizontal_margin_small"/>

            <TextView
                android:id="@+id/issue_event_createdAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bluegrey800"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/item_horizontal_margin_xlarge"
            android:paddingStart="@dimen/item_horizontal_margin_xlarge"
            android:paddingRight="@dimen/item_horizontal_margin_xlarge"
            android:paddingEnd="@dimen/item_horizontal_margin_xlarge"
            android:paddingBottom="@dimen/item_horizontal_margin_normal">

            <TextView
                android:id="@+id/issue_event_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bluegrey800"
                android:paddingRight="2dp"
                android:paddingEnd="2dp"/>

            <TextView
                android:id="@+id/issue_event_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/rectangel_drawable"
                android:padding="0dp"/>

        </LinearLayout>

    </LinearLayout>

    <!--<TextView
        android:id="@+id/issue_event_prefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/bluegrey700"/>

    <TextView
        android:id="@+id/issue_event_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/rectangel_drawable"/>

    <TextView
        android:id="@+id/issue_event_postfix"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="14sp"
        android:textColor="@color/bluegrey700"/>-->

</LinearLayout>